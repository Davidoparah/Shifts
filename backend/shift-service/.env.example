# Cross-Origin Resource Sharing
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8100

# Logging
LOG_LEVEL=debug

# Background Jobs
SIDEKIQ_CONCURRENCY=5
MAX_CONCURRENT_SHIFTS=100 