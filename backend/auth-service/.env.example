# Application
RAILS_ENV=development
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/odc_auth_development

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_REFRESH_SECRET_KEY=your_jwt_refresh_secret_key_here

# Email Configuration
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_DOMAIN=gmail.com
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# New Relic
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here
NEW_RELIC_APP_NAME=odc-auth-service

# Cross-Origin Resource Sharing
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8100

# Service Discovery
SERVICE_NAME=auth-service
SERVICE_HOST=localhost
SERVICE_PORT=3001

# Logging
LOG_LEVEL=debug 